# Database
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-...
ANTHROPIC_MODEL_DEFAULT=claude-sonnet-4-5-20250929
ANTHROPIC_MODEL_COMPLEX=claude-sonnet-4-5-20250929

# Microsoft Graph API (for email fetching)
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret
MICROSOFT_OBJECT_ID=your-object-id

# Azure Storage (leave empty for local development, fill for Azure)
AZURE_STORAGE_CONNECTION_STRING=

# Azure File Share (for email export to mapped network drive)
AZURE_STORAGE_ACCOUNT=fdorderprocessingstorage
AZURE_FILE_SHARE=fdorderprocessingfileshare
AZURE_STORAGE_KEY=your-storage-account-key

# Azure Identity (for service principal)
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id

# Redis
# Local development:
REDIS_URL=redis://localhost:6379/0
# Azure production (use rediss:// for SSL):
# REDIS_URL=rediss://:<primary-key>@order-processing-text-redis.redis.cache.windows.net:6380/0

# Authentication
JWT_SECRET=your-secret-key-here
